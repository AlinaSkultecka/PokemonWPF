<Window x:Class="PokemonWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">

    <Grid Margin="20" Background ="Beige">

        <!--Rows for card sections-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/><!--Heading-->
            <RowDefinition Height="2*"/> <!--Image-->
            <RowDefinition Height="Auto"/><!--Sub info-->
            <RowDefinition Height="*"/><!--Move 1-->
            <RowDefinition Height="*"/><!--Move 2-->
            <RowDefinition Height="Auto"/><!--Weak Resist Retreat-->
            <RowDefinition Height="Auto"/><!--Buttons-->
        </Grid.RowDefinitions>

            <!--Columns-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/><!--Left side-->          
            <ColumnDefinition Width="Auto"/> <!--Center-->
            <ColumnDefinition Width="*"/> <!--Right side-->
        </Grid.ColumnDefinitions>

        <!--Heading Section-->
       <Border Grid.Row="0" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Heading" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>   
        
       <!--Image area-->
        <Border Grid.Row="1" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <Rectangle Fill="DarkGray" Height="200" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!--Sub info-->
        <Border Grid.Row="2" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Sub Info" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!--Move 1-->
        <Border Grid.Row="3" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Move 1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!--Move 2-->
        <Border Grid.Row="4" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Move 2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!--Weakness, Resistance, Retreat-->
        <Border Grid.Row="5" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Weakness, Resistance, Retreat" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!--Buttons-->
        <Border Grid.Row=" 6" Grid.ColumnSpan="3" Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="Buttons" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>




    </Grid>
</Window>
