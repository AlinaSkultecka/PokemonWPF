<Window x:Class="PokemonWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">

    <Grid Margin="20" x:Name="MainColorBlock">

        <!--Rows for card sections-->
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!--Heading-->
            <RowDefinition Height="230"/>
            <!--Image-->
            <RowDefinition Height="Auto"/>
            <!--Sub info-->
            <RowDefinition Height="*"/>
            <!--Moves-->
            <RowDefinition Height="Auto"/>
            <!--Weak Resist Retreat-->
            <RowDefinition Height="Auto"/>
            <!--Buttons-->
        </Grid.RowDefinitions>

        <!--Columns-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!--Left side-->
            <ColumnDefinition Width="Auto"/>
            <!--Center-->
            <ColumnDefinition Width="*"/>
            <!--Right side-->
        </Grid.ColumnDefinitions>

        <!--Heading Section-->
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!--Class-->
                <ColumnDefinition Width="*"/>
                <!--Name-->
                <ColumnDefinition Width="Auto"/>
                <!--HP-->
            </Grid.ColumnDefinitions>

            <!--Class-->
            <Border Grid.Column="0" BorderBrush="DarkGray" Background="LightGray" BorderThickness="1" Margin="2" Padding="5">
                <Button Content="Choose Pokemon" Click="OpenSelectionWindowClick"/>
            </Border>
            <!--Name-->
            <Border Grid.Column="1"  Margin="2" Padding="5">
                <TextBlock x:Name="NameTextBlock" Text="{Binding Name}" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </Border>
            <!--HP-->
            <Border Grid.Column="2"  Margin="2" Padding="5">
                <TextBlock x:Name="HPTextBlock" Text="{Binding HP}" FontWeight="Bold" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

        </Grid>

        <!--Image Row 1-->
        <Border Grid.Row="1" Grid.ColumnSpan="3" BorderBrush="Gray" BorderThickness="1"  Padding="5" Background="LightGray" Margin="12,0,12,15" Grid.RowSpan="2">
            <Image x:Name="ImageBlock" Margin="-1,-1,-1,-1" Source="{Binding ImagePath}" Stretch="Fill" />
        </Border>

        <!--Sub Info row 2-->
        <Border Grid.Row="2" Grid.ColumnSpan="3" BorderBrush="DarkGray" Background="LightGray" BorderThickness="3" Margin="1">
            <TextBlock x:Name="SubInfoTextBlock" Text="{Binding SubInfo}" FontSize="8" HorizontalAlignment="Center"/>
        </Border>


        <!--Moves row 3-->
        <Grid x:Name="BackgroundColorBlock" Grid.Row="3" Grid.ColumnSpan="3" Margin="5,0,5,0" VerticalAlignment="Center" >

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!--Move1 Name-->
                <RowDefinition Height="Auto"/>
                <!--Move1 Description-->
                <RowDefinition Height="Auto"/>
                <!--Move2 Name-->
                <RowDefinition Height="Auto"/>
                <!--Move2 Description-->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="Auto"/>
                <!--Icon-->
                <ColumnDefinition Width="*"/>
                <!--Move Name-->
                <ColumnDefinition Width="Auto"/>
                <!--Damage-->
            </Grid.ColumnDefinitions>

            <!--Move 1 Heading row-->
            <Border Grid.Row="0" Grid.Column="0" Margin="1,5,1,0" Padding="5">
                <TextBlock x:Name="Attack1IconTextBlock" Text="{Binding Attacks[0].Icon}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" Margin="1,5,1,0" Padding="5">
                <TextBlock x:Name="Attack1NameTextBlock" Text="{Binding Attacks[0].Name}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            </Border>

            <Border Grid.Row="0" Grid.Column="2" Margin="1,5,1,0" Padding="5">
                <TextBlock x:Name="Attack1DamageTextBlock" Text="{Binding Attacks[0].Demage}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!--Description row-->
            <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" Margin="8,0,8,8">
                <TextBlock x:Name="Attack1DescriptionTextBlock" Text="{Binding Attacks[0].Description}"  FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"/>
            </Border>

            <!--Move 2 Heading row-->
            <Border Grid.Row="2" Grid.Column="0" Margin="1,1,1,5" Padding="5">
                <TextBlock x:Name="Attack2IconTextBlock" Text="{Binding Attacks[1].Icon}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" Margin="1"/>
            </Border>

            <Border Grid.Row="2" Grid.Column="1" Margin="1,1,1,0" Padding="5" Height="33" VerticalAlignment="Top">
                <TextBlock x:Name="Attack2NameTextBlock" Text="{Binding Attacks[1].Name}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="1"/>
            </Border>

            <Border Grid.Row="2" Grid.Column="2" Margin="1,1,1,5" Padding="5">
                <TextBlock x:Name="Attack2DamageTextBlock" Text="{Binding Attacks[1].Demage}" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>

            <!--Description row-->
            <Border Grid.Row="3" Grid.ColumnSpan="3" Grid.Column="0" Margin="8,0,8,8">
                <TextBlock x:Name="Attack2DescriptionTextBlock" Text="{Binding Attacks[1].Description}"  FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"/>
            </Border>
        </Grid>

        <!--Weak Resist Retreat row 4-->
        <Grid Grid.Row="4" Grid.ColumnSpan="3" Margin="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="36*"/>
                <RowDefinition Height="89*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!--Weakness-->
                <ColumnDefinition Width="*"/>
                <!--Resist-->
                <ColumnDefinition Width="*"/>
                <!--Retreat-->
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="3" Margin="2,2,2,2" Padding="5" Grid.RowSpan="2">
                <TextBlock x:Name="WeaknessTextBlock" Text="{Binding Weakness}" FontWeight="Bold" FontSize="10"  VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Border>

            <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="3" Margin="2,2,2,2" Padding="5" Grid.RowSpan="2">
                <TextBlock x:Name="ResistanceTextBlock" Text="{Binding Reasistance}" FontWeight="Bold" FontSize="10"  VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Border>

            <Border Grid.Column="2" BorderBrush="LightGray" BorderThickness="3" Margin="2,2,2,2" Padding="5" Grid.RowSpan="2">
                <TextBlock x:Name="RetreatTextBlock" Text="{Binding Reatreat}" FontWeight="Bold" FontSize="10"  VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Border>
        </Grid>

        <!--Bottoms row 6-->
        <Grid Grid.Row="5" Grid.ColumnSpan="3" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="85"/>
                <!--Left Bottom-->
                <ColumnDefinition Width="*"/>
                <!--Right Bottom-->
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderThickness="3" Margin="1" >
                <TextBlock x:Name="IllusAuthorTextBlock" Text="{Binding IllusAuthor}" FontWeight="Bold" FontSize="10"  VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap"/>
            </Border>

            <Border Grid.Column="1" BorderThickness="3" Margin="1" >
                <TextBlock x:Name="BottomTextBlock" Text="{Binding BottomInfo}" FontSize="9"  VerticalAlignment="Top" HorizontalAlignment="Left" TextWrapping="Wrap" Margin="9,-3,0,0"/>
            </Border>
        </Grid>
    </Grid>
</Window>